@model RojikanPU.Models.PPKCommentViewModel

@{
    ViewBag.Title = "Comment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tambah Komentar</h2>


@using (Html.BeginForm("PPKComment", "Report", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("ReportId", ViewData["ReportId"].ToString())

        <div class="form-group">
            @Html.Label("Kronologi Komentar", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Raw(Model.PPKComment)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @rows = 10 })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">Upload File</div>
            <div class="col-md-10">
                <input type="file" name="file" id="file" class="form-control-file" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Assigned")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script>
    CKEDITOR.replace('Comment', {
			height: 260,
			width: 700,
		} );
</script>