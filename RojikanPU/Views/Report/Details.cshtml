    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail Laporan</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Origin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Origin)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt>
            File KTP
        </dt>

        <dd>
            <a href="@Model.IDCardURL">Download</a> 
        </dd>
        @if (Model.Type != "MASYARAKAT")
        {
            <dt>
                @if (Model.Type == "MEDIA")
                { <span>File ID Media</span> }
                @if (Model.Type == "LSM")
                { <span>File ID LSM</span> }
            </dt>

            <dd>
                <a href="@Model.LicenseURL">Download</a>
            </dd>
            <dt>
                @if (Model.Type == "MEDIA")
                { <span>File Izin Media</span> }
                @if (Model.Type == "LSM")
                { <span>File Izin LSM</span> }
            </dt>

            <dd>
                <a href="@Model.OrganizationPermitURL">Download</a>
            </dd>
        }
        

        <dt>
            File Laporan
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.ReportFileURL)) { <a href="@Model.ReportFileURL">Download</a> }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AssignedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AssignedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StaffComment)
        </dt>

        <dd>
            @Html.Raw(Model.StaffComment)
        </dd>
        <dt>
            File Disposisi
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.StaffFileURL))
            { <a href="@Model.StaffFileURL">Download</a> }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AssignedToPPK)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AssignedToPPK)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClosedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClosedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PPKComment)
        </dt>

        <dd>
            @Html.Raw(Model.PPKComment)
        </dd>
        <dt>
            File PPK
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.PPKFileURL))
            { <a href="@Model.PPKFileURL">Download</a> }
        </dd>
    </dl>
</div>
<p>
    @if (User.IsInRole("PPK"))
    { @Html.ActionLink("Back to List", "Assigned", "Report") }
    else
    {
        @Html.ActionLink("Back to List", "Index")
    }

    @if (User.IsInRole("Data Entry") || User.IsInRole("Administrator"))
    {
        if (Model.Status.Equals("CLOSED"))
        {
            @Html.ActionLink("| Reject", "Reject", new { id = Model.Id })
        }
    }
</p>
