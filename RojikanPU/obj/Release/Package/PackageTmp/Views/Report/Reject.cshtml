@model RojikanPU.Models.RejectViewModel

@{
    ViewBag.Title = "Reject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tolak Laporan</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label("Komentar PPK", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Raw(Model.PPKComment)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StaffComment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.StaffComment, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StaffComment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    CKEDITOR.replace('StaffComment', {
			height: 260,
			width: 700,
		} );
</script>