@model RojikanPU.Models.ArticleFileViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hapus File</h2>

<h3>Apakah anda yakin menghapus file ini?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">       

        <dt>
            @Html.DisplayNameFor(model => model.FileName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FileName)
        </dd>        

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.Hidden("FileName", Model.FileName)
        @Html.Hidden("ArticleId", Model.ArticleId)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", new { id = Model.ArticleId })
        </div>
    }
</div>
